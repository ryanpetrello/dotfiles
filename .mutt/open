on run argv
    tell application "Mutt"
        activate
        tell application "System Events"
            keystroke "c" using control down
            delay 0.1
            keystroke "n"
            delay 0.1
            set the clipboard to (item 1 of argv as string)
            keystroke "c"
            delay 0.1
            keystroke "v" using {command down}
            delay 0.1
            keystroke return
            delay 1
            keystroke "l"
            delay 0.1
            keystroke "~i "
            delay 0.1
            set the clipboard to (item 2 of argv as string)
            keystroke "v" using {command down}
            keystroke return
            delay 0.1
            keystroke "oU"
        end tell
    end tell
end run
